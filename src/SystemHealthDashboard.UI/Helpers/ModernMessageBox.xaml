<Window x:Class="SystemHealthDashboard.UI.Helpers.ModernMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Message" 
        Height="250" 
        Width="450"
        Background="#FF1E1E1E"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        ShowInTaskbar="False">
    
    <Window.Resources>
        <Style TargetType="Button" x:Key="ModernButtonStyle">
            <Setter Property="Height" Value="38"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="15,0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Border BorderBrush="#FF3F3F46" BorderThickness="1" CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header with Icon -->
            <Border Grid.Row="0" Background="#FF252526" CornerRadius="8,8,0,0">
                <StackPanel Orientation="Horizontal" Margin="20,0">
                    <TextBlock x:Name="IconText" 
                               FontSize="32" 
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"/>
                    <TextBlock x:Name="TitleText" 
                               Text="Message" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <!-- Message Content -->
            <Border Grid.Row="1" Padding="25,20">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="MessageText" 
                               Text="Message content" 
                               FontSize="14" 
                               Foreground="#FFCCCCCC"
                               TextWrapping="Wrap"
                               LineHeight="22"/>
                </ScrollViewer>
            </Border>
            
            <!-- Buttons -->
            <Border Grid.Row="2" 
                    Background="#FF2D2D30" 
                    CornerRadius="0,0,8,8"
                    Padding="20,15">
                <StackPanel x:Name="ButtonPanel" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right">
                    <Button x:Name="YesButton" 
                            Content="OK" 
                            Style="{StaticResource ModernButtonStyle}"
                            Background="#FF6495ED"
                            Click="YesButton_Click"/>
                    <Button x:Name="NoButton" 
                            Content="No" 
                            Style="{StaticResource ModernButtonStyle}"
                            Background="#FF5A5A5D"
                            Visibility="Collapsed"
                            Click="NoButton_Click"/>
                    <Button x:Name="CancelButton" 
                            Content="Cancel" 
                            Style="{StaticResource ModernButtonStyle}"
                            Background="#FF3E3E42"
                            Visibility="Collapsed"
                            Click="CancelButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
