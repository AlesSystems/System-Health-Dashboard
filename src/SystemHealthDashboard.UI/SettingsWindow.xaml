<Window x:Class="SystemHealthDashboard.UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="⚙️ Settings" Height="620" Width="520"
        Background="#FF1E1E1E"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <Style TargetType="Border" x:Key="SectionStyle">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="10,10,10,0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="5" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style TargetType="TextBlock" x:Key="SectionHeaderStyle">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#FFB0B0B0"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>
        
        <Style TargetType="Slider">
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="Foreground" Value="#FF6495ED"/>
        </Style>
        
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        
        <Style TargetType="Button" x:Key="ActionButtonStyle">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,10,10,15">
            <TextBlock Text="⚙️ Application Settings" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White"/>
            <TextBlock x:Name="UnsavedChangesIndicator"
                       Text="●"
                       FontSize="24"
                       Foreground="#FFFF6347"
                       Margin="10,0,0,0"
                       ToolTip="You have unsaved changes"
                       Visibility="Collapsed"/>
        </StackPanel>
        
        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Performance Settings -->
                <Border Style="{StaticResource SectionStyle}">
                    <StackPanel>
                        <TextBlock Text="Performance" Style="{StaticResource SectionHeaderStyle}"/>
                        
                        <TextBlock Style="{StaticResource LabelStyle}">
                            <Run Text="Refresh Interval:"/>
                            <Run x:Name="RefreshIntervalText" Text="1000 ms" FontWeight="Bold"/>
                        </TextBlock>
                        <Slider x:Name="RefreshIntervalSlider" 
                                Minimum="100" Maximum="5000" 
                                TickFrequency="100"
                                ToolTip="How often metrics are collected (lower = more responsive, higher = less CPU usage)"
                                ValueChanged="RefreshIntervalSlider_ValueChanged"/>
                        
                        <TextBlock Style="{StaticResource LabelStyle}">
                            <Run Text="History Size:"/>
                            <Run x:Name="HistorySizeText" Text="60 points" FontWeight="Bold"/>
                        </TextBlock>
                        <Slider x:Name="HistorySizeSlider" 
                                Minimum="30" Maximum="300" 
                                TickFrequency="10"
                                ToolTip="Number of data points to keep in chart history"
                                ValueChanged="HistorySizeSlider_ValueChanged"/>
                    </StackPanel>
                </Border>
                
                <!-- Alert Thresholds -->
                <Border Style="{StaticResource SectionStyle}">
                    <StackPanel>
                        <TextBlock Text="Alert Thresholds" Style="{StaticResource SectionHeaderStyle}"/>
                        
                        <TextBlock Style="{StaticResource LabelStyle}">
                            <Run Text="CPU Threshold:"/>
                            <Run x:Name="CpuThresholdText" Text="85%" FontWeight="Bold"/>
                        </TextBlock>
                        <Slider x:Name="CpuThresholdSlider" 
                                Minimum="50" Maximum="100" 
                                TickFrequency="5"
                                ToolTip="Alert when CPU usage exceeds this percentage"
                                ValueChanged="CpuThresholdSlider_ValueChanged"/>
                        
                        <TextBlock Style="{StaticResource LabelStyle}">
                            <Run Text="Memory Threshold:"/>
                            <Run x:Name="MemoryThresholdText" Text="80%" FontWeight="Bold"/>
                        </TextBlock>
                        <Slider x:Name="MemoryThresholdSlider" 
                                Minimum="50" Maximum="100" 
                                TickFrequency="5"
                                ToolTip="Alert when memory usage exceeds this percentage"
                                ValueChanged="MemoryThresholdSlider_ValueChanged"/>
                        
                        <TextBlock Style="{StaticResource LabelStyle}">
                            <Run Text="Disk Usage Threshold:"/>
                            <Run x:Name="DiskThresholdText" Text="90%" FontWeight="Bold"/>
                        </TextBlock>
                        <Slider x:Name="DiskThresholdSlider" 
                                Minimum="50" Maximum="100" 
                                TickFrequency="5"
                                ToolTip="Alert when disk usage exceeds this percentage"
                                ValueChanged="DiskThresholdSlider_ValueChanged"/>
                    </StackPanel>
                </Border>
                
                <!-- Notification Settings -->
                <Border Style="{StaticResource SectionStyle}">
                    <StackPanel>
                        <TextBlock Text="Notifications" Style="{StaticResource SectionHeaderStyle}"/>
                        
                        <CheckBox x:Name="NotificationsCheckBox" 
                                  Content="Enable Notifications"
                                  ToolTip="Show desktop notifications for alerts"
                                  Checked="CheckBox_Changed"
                                  Unchecked="CheckBox_Changed"/>
                        <CheckBox x:Name="TrayIconCheckBox" 
                                  Content="Change Tray Icon Color on Alerts"
                                  ToolTip="Tray icon will change color when alerts are triggered"
                                  Checked="CheckBox_Changed"
                                  Unchecked="CheckBox_Changed"/>
                    </StackPanel>
                </Border>
                
                <!-- Startup Settings -->
                <Border Style="{StaticResource SectionStyle}">
                    <StackPanel>
                        <TextBlock Text="Startup Behavior" Style="{StaticResource SectionHeaderStyle}"/>
                        
                        <CheckBox x:Name="StartMinimizedCheckBox" 
                                  Content="Start Minimized"
                                  ToolTip="Application will start minimized to system tray"
                                  Checked="CheckBox_Changed"
                                  Unchecked="CheckBox_Changed"/>
                        <CheckBox x:Name="MinimizeToTrayCheckBox" 
                                  Content="Minimize to Tray"
                                  ToolTip="Minimize to system tray instead of taskbar"
                                  Checked="CheckBox_Changed"
                                  Unchecked="CheckBox_Changed"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="10,15,10,10">
            <Button x:Name="ResetButton" 
                    Content="Reset to Defaults" 
                    Width="130" 
                    Height="35" 
                    Margin="0,0,10,0"
                    Background="#FF5A5A5D"
                    ToolTip="Reset all settings to their default values"
                    Style="{StaticResource ActionButtonStyle}"
                    Click="ResetButton_Click"/>
            <Button x:Name="SaveButton" 
                    Content="Save" 
                    Width="100" 
                    Height="35" 
                    Margin="0,0,10,0"
                    Background="#FF6495ED"
                    ToolTip="Save all changes"
                    Style="{StaticResource ActionButtonStyle}"
                    Click="SaveButton_Click"/>
            <Button x:Name="CancelButton" 
                    Content="Cancel" 
                    Width="100" 
                    Height="35"
                    Background="#FF3E3E42"
                    ToolTip="Close without saving"
                    Style="{StaticResource ActionButtonStyle}"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
