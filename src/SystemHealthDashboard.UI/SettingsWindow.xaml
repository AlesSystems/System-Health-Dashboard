<Window x:Class="SystemHealthDashboard.UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="⚙️ Settings" Height="600" Width="500"
        Background="#FF1E1E1E"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <Style TargetType="Border" x:Key="SectionStyle">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="10,10,10,0"/>
        </Style>
        
        <Style TargetType="TextBlock" x:Key="SectionHeaderStyle">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#FFB0B0B0"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>
        
        <Style TargetType="Slider">
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>
        
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="⚙️ Application Settings" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Foreground="White"
                   Margin="10,10,10,15"/>
        
        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Performance Settings -->
                <Border Style="{StaticResource SectionStyle}">
                    <StackPanel>
                        <TextBlock Text="Performance" Style="{StaticResource SectionHeaderStyle}"/>
                        
                        <TextBlock Style="{StaticResource LabelStyle}">
                            <Run Text="Refresh Interval:"/>
                            <Run x:Name="RefreshIntervalText" Text="1000 ms" FontWeight="Bold"/>
                        </TextBlock>
                        <Slider x:Name="RefreshIntervalSlider" 
                                Minimum="100" Maximum="5000" 
                                TickFrequency="100"
                                ValueChanged="RefreshIntervalSlider_ValueChanged"/>
                        
                        <TextBlock Style="{StaticResource LabelStyle}">
                            <Run Text="History Size:"/>
                            <Run x:Name="HistorySizeText" Text="60 points" FontWeight="Bold"/>
                        </TextBlock>
                        <Slider x:Name="HistorySizeSlider" 
                                Minimum="30" Maximum="300" 
                                TickFrequency="10"
                                ValueChanged="HistorySizeSlider_ValueChanged"/>
                    </StackPanel>
                </Border>
                
                <!-- Alert Thresholds -->
                <Border Style="{StaticResource SectionStyle}">
                    <StackPanel>
                        <TextBlock Text="Alert Thresholds" Style="{StaticResource SectionHeaderStyle}"/>
                        
                        <TextBlock Style="{StaticResource LabelStyle}">
                            <Run Text="CPU Threshold:"/>
                            <Run x:Name="CpuThresholdText" Text="85%" FontWeight="Bold"/>
                        </TextBlock>
                        <Slider x:Name="CpuThresholdSlider" 
                                Minimum="50" Maximum="100" 
                                TickFrequency="5"
                                ValueChanged="CpuThresholdSlider_ValueChanged"/>
                        
                        <TextBlock Style="{StaticResource LabelStyle}">
                            <Run Text="Memory Threshold:"/>
                            <Run x:Name="MemoryThresholdText" Text="80%" FontWeight="Bold"/>
                        </TextBlock>
                        <Slider x:Name="MemoryThresholdSlider" 
                                Minimum="50" Maximum="100" 
                                TickFrequency="5"
                                ValueChanged="MemoryThresholdSlider_ValueChanged"/>
                        
                        <TextBlock Style="{StaticResource LabelStyle}">
                            <Run Text="Disk Usage Threshold:"/>
                            <Run x:Name="DiskThresholdText" Text="90%" FontWeight="Bold"/>
                        </TextBlock>
                        <Slider x:Name="DiskThresholdSlider" 
                                Minimum="50" Maximum="100" 
                                TickFrequency="5"
                                ValueChanged="DiskThresholdSlider_ValueChanged"/>
                    </StackPanel>
                </Border>
                
                <!-- Notification Settings -->
                <Border Style="{StaticResource SectionStyle}">
                    <StackPanel>
                        <TextBlock Text="Notifications" Style="{StaticResource SectionHeaderStyle}"/>
                        
                        <CheckBox x:Name="NotificationsCheckBox" Content="Enable Notifications"/>
                        <CheckBox x:Name="TrayIconCheckBox" Content="Change Tray Icon Color on Alerts"/>
                    </StackPanel>
                </Border>
                
                <!-- Startup Settings -->
                <Border Style="{StaticResource SectionStyle}">
                    <StackPanel>
                        <TextBlock Text="Startup Behavior" Style="{StaticResource SectionHeaderStyle}"/>
                        
                        <CheckBox x:Name="StartMinimizedCheckBox" Content="Start Minimized"/>
                        <CheckBox x:Name="MinimizeToTrayCheckBox" Content="Minimize to Tray"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="10,15,10,10">
            <Button x:Name="SaveButton" 
                    Content="Save" 
                    Width="100" 
                    Height="35" 
                    Margin="0,0,10,0"
                    Background="#FF6495ED"
                    Foreground="White"
                    BorderThickness="0"
                    FontWeight="SemiBold"
                    Click="SaveButton_Click"/>
            <Button x:Name="CancelButton" 
                    Content="Cancel" 
                    Width="100" 
                    Height="35"
                    Background="#FF3E3E42"
                    Foreground="White"
                    BorderThickness="0"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
